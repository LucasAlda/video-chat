<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet" />
    <title>Room</title>
  </head>
  <body>
    <div class="container">
      <div class="main">
        <div class="main-videos">
          <div id="video-grid"></div>
        </div>
        <div class="main-controls">
          <div class="main-control-title"></div>
          <div class="main-controls-block">
            <div class="main-control-button call-controls" onclick="muteOrUnmute()">
              <i class="fas fa-microphone microphone"></i>
            </div>
            <div class="main-control-button end-call">
              <i class="fas fa-phone-slash"></i>
            </div>
            <div class="main-control-button video">
              <i class="fas fa-video"></i>
            </div>
          </div>
          <div class="main-control-block">
            <div class="main-control-button chat">
              <i class="fas fa-users"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="sidebar">
        <div class="sidebar-header">
          <h6>Chat</h6>
          <i class="fas fa-times"></i>
        </div>
        <div class="sidebar-chat">
          <ul class="messages"></ul>
        </div>
        <div class="message-container">
          <input type="text" id="chat-message" placeholder="Say Hi!" />
          <button class="submit"><i class="fas fa-paper-plane"></i></button>
        </div>
      </div>
    </div>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <script src="ui.js" defer></script>
    <script src="https://kit.fontawesome.com/e54da704e9.js" crossorigin="anonymous"></script>
  </body>
</html>
