<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet" />
    <title>Room</title>
  </head>
  <body>
    <div class="container">
      <div class="main">
        <div class="main-videos">
          <div class="videos-container">
            <div id="video-grid"></div>
          </div>
        </div>
        <div class="main-controls">
          <div class="main-control-title">
            <div class="message-container">
              <input type="text" id="name-input" placeholder="Name" value="" />
              <button class="submit" id="name-save"><i class="fas fa-save"></i></button>
            </div>
          </div>
          <div class="main-controls-block d-none" id="call-controls">
            <div class="main-control-button call-controls" id="micro-button">
              <i class="fas fa-microphone microphone"></i>
            </div>
            <div class="main-control-button end-call" id="stop-call-button">
              <i class="fas fa-phone-slash"></i>
            </div>
            <div class="main-control-button video" id="camara-button">
              <i class="fas fa-video"></i>
            </div>
            <div class="main-control-button end-call" id="share-button">
              <i class="fas fa-tv"></i>
            </div>
          </div>
          <div class="main-controls-block" id="enter-call-controls">
            <div class="main-control-button call-button" id="call-button">Entrar a la llamada</div>
          </div>

          <div class="main-control-block chat">
            <div class="main-control-button chat" id="fullscreen-button">
              <i class="fas fa-expand"></i>
            </div>
            <div class="main-control-button chat" id="open-chat-button">
              <i class="fas fa-users"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="sidebar">
        <div class="sidebar-header">
          <h6>Chat</h6>
          <i class="fas fa-times"></i>
        </div>
        <div class="sidebar-chat">
          <ul class="messages" id="messages"></ul>
        </div>
        <div class="message-container">
          <form id="send-message">
            <input type="text" name="message" autocomplete="off" placeholder="Say Hi!" />
            <button type="submit" class="submit"><i class="fas fa-paper-plane"></i></button>
          </form>
        </div>
      </div>
    </div>
    <div class="modal-container" id="modal">
      <div class="modal">
        <div class="modal-header">
          <h3>Configurar Llamada</h3>
          <button class="close-modal-button"><i class="fas fa-times"></i></button>
        </div>
        <div class="modal-body">
          <form id="call-config">
            <label>Camara:</label>
            <select name="video" id="video-devices">
              <option value="false">Sin Cámara</option>
            </select>
            <label>Sonido:</label>
            <select name="audio" id="audio-devices">
              <option value="false">Sin Cámara</option>
            </select>
          </form>
        </div>
        <div class="modal-bottom">
          <button type="button" id="enter-call-button">Entrar</button>
        </div>
      </div>
    </div>

    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="ui.js" defer></script>
    <script src="script.js" defer></script>
    <script src="https://kit.fontawesome.com/e54da704e9.js" crossorigin="anonymous"></script>
    <audio id="video"></audio>
    <script></script>
  </body>
</html>
